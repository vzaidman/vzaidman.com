{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@now/static-build" }
  ],
  "routes": [
    {
      "src": "^((?!\\.).)+$",
      "status": 301,
      "headers": {
        "Location": "https://vzaidman.com"
      }
    },
    {
      "src": "\\.",
      "headers": {
        "Cache-Control": "public, max-age=360000"
      }
    },
    {
      "src": ".*\\.(pdf|txt|xml)$",
      "headers": {
        "Cache-Control": "public, max-age=17280",
        "X-Frame-Options": "DENY",
        "Strict-Transport-Security": "max-age=63072000; includeSubDomains; preload",
        "X-Content-Type-Options": "nosniff",
        "X-XSS-Protection": "1; mode=block"
      }
    },
    {
      "src": ".*",
      "headers": {
        "X-Frame-Options": "DENY",
        "Strict-Transport-Security": "max-age=63072000; includeSubDomains; preload",
        "X-Content-Type-Options": "nosniff",
        "X-XSS-Protection": "1; mode=block"
      }
    },
    {
      "src": "/^",
      "headers": {
        "Link": "<https://www.googletagmanager.com>; rel=preconnect; crossorigin, <https://www.googletagmanager.com/gtag/js?id=UA-142161010-1>; rel=prefetch; crossorigin, <https://www.google-analytics.com/analytics.js>; rel=prefetch; crossorigin, <https://www.google-analytics.com>; rel=preconnect; crossorigin"
      }
    }
  ]
}
