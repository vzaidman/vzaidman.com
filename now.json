{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@now/static-build"
    },
    {
      "src": "build/create-pdf-file-zeit.js",
      "use": "@now/node",
      "config": { "maxLambdaSize": "40mb" }
    }
  ],
  "routes": [
    {
      "src": ".*",
      "headers": {
        "X-Frame-Options": "DENY",
        "Strict-Transport-Security": "max-age=63072000; includeSubDomains; preload",
        "X-Content-Type-Options": "nosniff",
        "X-XSS-Protection": "1; mode=block"
      },
      "continue": true
    },
    {
      "src": "\/?$",
      "headers": {
        "Link": "<https://mc.yandex.ru>; rel=preconnect; crossorigin"
      }
    },
    {
      "src": "\/.*\\..*$",
      "headers": {
        "Cache-Control": "public, max-age=31557600"
      },
      "continue": true
    },
    {
      "src": "\/.*\\.(pdf|txt|xml)$",
      "headers": {
        "Cache-Control": "public, max-age=17280"
      },
      "continue": true
    },
    {
      "handle": "filesystem"
    }
  ]
}
